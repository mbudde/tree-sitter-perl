    (interpolated_string_literal
      (quotelike_begin)
      (array_element_expression
        (container_variable)
        (number))
      (quotelike_end)))
  (expression_statement
    (interpolated_string_literal
      (quotelike_begin)
      (array_element_expression
        (scalar)
        (number))
      (quotelike_end)))
  (expression_statement
    (interpolated_string_literal
      (quotelike_begin)
      (array_element_expression
        (array_element_expression
          (scalar)
          (number))
        (number))
      (quotelike_end))))

