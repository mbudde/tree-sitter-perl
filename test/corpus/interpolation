================================================================================
Fancy indirob interpolation
================================================================================
"${\$obj->method}";
"@{[1,2,3]}";
--------------------------------------------------------------------------------

(source_file
  (expression_statement
    (interpolated_string_literal
      (quotelike_begin)
      (scalar
        (block
          (expression_statement
            (refgen_expression
              (method_call_expression
                (scalar)
                (method))))))
      (quotelike_end)))
  (expression_statement
    (interpolated_string_literal
      (quotelike_begin)
      (array
        (block
          (expression_statement
            (anonymous_array_expression
              (list_expression
                (number)
                (number)
                (number))))))
      (quotelike_end))))

================================================================================
Array element interpolation
================================================================================
